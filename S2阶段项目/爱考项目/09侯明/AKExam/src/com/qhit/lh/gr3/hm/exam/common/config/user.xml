<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "hibernate-mapping-2.0.dtd" >
<struts>
	<package name="user" namespace="/user" extends="default">
		
        <action name="user_*" class="com.qhit.lh.gr3.hm.exam.common.action.UserAction" method="{1}">
        	<result name="loginSuccess">/jsp/home.jsp</result>
        	<result name="loginFail">/index.jsp</result>
        	<result name="logout">/index.jsp</result>
        </action>
	</package>
</struts>
